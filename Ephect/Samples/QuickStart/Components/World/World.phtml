<?php

namespace Appliance;

use function Bolero\Forms\Hooks\useEffect;

function World($props): string
{

    useEffect(function($props, /* string */ $name, /* string */ $lname) {
        $name = $props->name;
        $lname = $props->lname;
    });

    return (<<< HTML
    <!DOCTYPE html>
    <html>
        <head>
            <meta charset="UTF-8">
            <title>
                Hello
            </title>
        </head>
        <body>
        
            Hello {{ name }} {{ lname }}

        </body>
    </html>
    HTML);
}
